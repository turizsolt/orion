  "license": "MIT",
  "scripts": {
    "prebuild": "yarn clear && yarn lint && yarn test",
    "build": "webpack",
    "start": "webpack && node build/index.js",
    "start:dev": "NODE_ENV=development webpack",
    "run:dev": "NODE_ENV=development nodemon --ignore build/* build/index.js",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose",
    "clear": "rm -r build/* || true",
    "test:only": "mocha -r ts-node/register test/**/*.{ts,tsx}",
    "test": "nyc mocha -r ts-node/register test/**/*.{ts,tsx}",
    "posttest": "nyc report --reporter=json && nyc report --reporter=html"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/http-errors": "^1.6.3",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^5.2.7",
    "@types/mocha-steps": "^1.3.0",
    "@types/node": "^13.1.6",
    "chai": "^4.2.0",
    "codecov": "^3.7.1",
    "mocha": "^6.2.2",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "@types/shortid": "^0.0.29",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fastify": "^2.15.1",
    "fastify-cors": "^3.0.1",
    "http-errors": "^1.7.3",
    "inversify": "^5.0.1",
    "lowdb": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.15",
    "socket.io": "^2.4.0"
  }
}
